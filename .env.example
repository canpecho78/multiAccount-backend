# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/whatsapp-multi-session

# Server Configuration
PORT=5000

# Auth Storage Configuration
# AUTH_STORAGE can be 'file' or 'mongo'. Default is 'mongo' (recommended for production)
# MongoDB is recommended for production as it's more scalable and reliable
AUTH_STORAGE=mongo
# Base path for file-based auth state (used when AUTH_STORAGE=file)
# This is no longer needed when using MongoDB, but kept for backward compatibility
AUTH_BASE_PATH=auth_info

# JWT Configuration
JWT_SECRET=super-secret-change-me

# Seed admin user (used by `pnpm seed`)
ADMIN_NAME=Admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# SMTP Configuration (para envío de emails)
# Ejemplos de configuración:
# - Gmail: smtp.gmail.com, puerto 587, SMTP_SECURE=false
# - Outlook: smtp-mail.outlook.com, puerto 587, SMTP_SECURE=false
# - SendGrid: smtp.sendgrid.net, puerto 587, SMTP_SECURE=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-app-password
SMTP_FROM_EMAIL=noreply@tudominio.com
SMTP_FROM_NAME=WhatsApp Multi-Sesiones

# Frontend URL (para enlaces en emails)
FRONTEND_URL=http://localhost:3000

# WhatsApp preload options
# Type of chats to preload when a session connects: individual (recommended) | group | all
# IMPORTANTE: Se recomienda usar 'individual' para no saturar el servidor con grupos
PRELOAD_CHATS_TYPE=individual
# Maximum number of chats to preload (máximo 100, recomendado 20-30)
PRELOAD_CHATS_LIMIT=30
